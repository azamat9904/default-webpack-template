{
  "compilerOptions": {
    "target": "es5",
    //    "target": "ES6", // remove and change it on target es5 before deploy
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "outDir": "./dist/",
    "pretty": true,
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "./src/**/*"
  ]
}
